<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        tools:context=".MainActivity">

    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="8dp" android:id="@+id/RecyclerView_Eventos_Usuario"
            android:layout_marginBottom="50dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:src="@drawable/ic_add_black_24dp"
            android:layout_margin="16dp" android:layout_marginEnd="37dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:backgroundTint="#FFA347" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/RecyclerView_Eventos_Usuario"/>


    <Button
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/button" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/RecyclerView_Eventos_Usuario"
            android:background="@drawable/boton_home" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="9dp"
            app:layout_constraintVertical_bias="0.2" android:layout_marginStart="36dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/button2"
            android:background="@drawable/boton_search"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/RecyclerView_Eventos_Usuario"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="9dp"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toEndOf="@+id/button"
            android:layout_marginStart="47dp"/>
    <Button
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/boton_ticket"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="9dp" app:layout_constraintTop_toBottomOf="@+id/RecyclerView_Eventos_Usuario"
            android:background="@drawable/boton_ticket" android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toStartOf="@+id/button4" android:layout_marginEnd="47dp"/>
    <Button
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/button4"
            android:background="@drawable/boton_alerta" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="45dp"
            android:layout_marginBottom="9dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/RecyclerView_Eventos_Usuario" android:layout_marginTop="8dp"
    />
    <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp" app:srcCompat="@drawable/tasa_cafe" android:id="@+id/crear_evento"
            android:background="@drawable/boton_redondo" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/fab"
            app:layout_constraintEnd_toEndOf="@+id/fab" app:layout_constraintStart_toStartOf="@+id/fab"
            android:visibility="gone" android:contentDescription="@string/imagen_para_crear_evento"/>

</android.support.constraint.ConstraintLayout>