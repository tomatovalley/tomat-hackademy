<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CrearEventoSA3">

    <TextView
            android:text="Paso 3/3"
            android:layout_width="152dp"
            android:layout_height="46dp"
            android:id="@+id/paso3" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent" android:textSize="36sp"
            android:textAlignment="center" android:fontFamily="sans-serif"/>
    <EditText
            android:layout_width="299.11dp"
            android:hint="Organizador"

            android:layout_height="wrap_content" android:textColor="@android:color/black"
            android:id="@+id/registrar_organizador"
            android:textSize="14sp" android:fontFamily="@font/roboto_medium"
            android:drawableStart="@drawable/ic_person_black_24dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="38dp"
            app:layout_constraintTop_toBottomOf="@+id/paso3"
            app:layout_constraintBottom_toTopOf="@+id/registrar_facebook"/>
    <EditText
            android:layout_width="299.11dp"

            android:layout_height="wrap_content" android:textColor="@android:color/black"
            android:id="@+id/registrar_facebook"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp" android:textSize="14sp" android:fontFamily="@font/roboto_medium"
            android:layout_marginStart="30dp" app:layout_constraintStart_toStartOf="parent"
            android:drawableStart="@drawable/ic_action_facebook"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/registrar_organizador"
            app:layout_constraintBottom_toTopOf="@+id/registrar_twitter" android:visibility="gone"/>
    <EditText
            android:layout_width="299.11dp"

            android:layout_height="wrap_content" android:textColor="@android:color/black"
            android:id="@+id/registrar_twitter"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp" android:textSize="14sp" android:fontFamily="@font/roboto_medium"
            android:layout_marginStart="30dp" app:layout_constraintStart_toStartOf="parent"
            android:drawableStart="@drawable/ic_action_twitter"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/registrar_facebook"
            app:layout_constraintBottom_toTopOf="@+id/registrar_instagram" android:visibility="gone"/>
    <EditText
            android:layout_width="299.11dp"
            android:hint="Agregar algunos TAGS?"

            android:layout_height="wrap_content" android:textColor="@android:color/black"
            android:id="@+id/tags"
            android:textSize="14sp" android:fontFamily="@font/roboto_medium"
            android:layout_marginStart="30dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="42dp" app:layout_constraintTop_toBottomOf="@+id/activar_redes_sociales"
            android:layout_marginEnd="30dp" app:layout_constraintEnd_toEndOf="parent" android:visibility="gone"/>
    <EditText
            android:layout_width="299.11dp"

            android:layout_height="wrap_content" android:textColor="@android:color/black"
            android:id="@+id/registrar_instagram"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp" android:textSize="14sp" android:fontFamily="@font/roboto_medium"
            android:layout_marginStart="30dp" app:layout_constraintStart_toStartOf="parent"
            android:drawableStart="@drawable/ic_action_instagram"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/registrar_twitter" android:layout_marginBottom="21dp"
            app:layout_constraintBottom_toTopOf="@+id/activar_redes_sociales" android:visibility="gone"/>
    <Switch
            android:text="Activar redes sociales?"
            android:layout_width="166dp"
            android:layout_height="29dp"
            android:id="@+id/activar_redes_sociales" android:textSize="12sp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="35dp" android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/registrar_instagram"/>
    <Button
            android:text="OK"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/salir" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Capacidad"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textAlignment="center" android:textSize="20sp"
            android:layout_marginTop="38dp" app:layout_constraintTop_toBottomOf="@+id/tags"/>
    <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_expand_less_black_24dp"
            android:id="@+id/capacidad_mayor"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="72dp" app:layout_constraintStart_toEndOf="@+id/capacidad_asistentes"
            android:layout_marginStart="18dp"/>
    <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_expand_more_black_24dp"
            android:id="@+id/capacidad_menor"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:layout_marginStart="72dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/capacidad_asistentes"
            android:layout_marginEnd="18dp"/>
    <EditText
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:inputType="number"
            android:background="@drawable/caja_vacia"
            android:ems="10"
            android:id="@+id/capacidad_asistentes"
            app:layout_constraintEnd_toStartOf="@+id/capacidad_mayor" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/capacidad_menor" android:layout_marginStart="8dp"
            android:text="500" android:textSize="14sp"
            android:textAlignment="center" android:textColor="#001C0B"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintBottom_toBottomOf="@+id/capacidad_menor"/>

</android.support.constraint.ConstraintLayout>