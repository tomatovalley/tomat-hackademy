<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CrearEmprendimientoSA">

    <EditText
            android:layout_width="299.11dp"
            android:hint="Nombre del emprendimiento"
            android:layout_height="wrap_content" android:textColor="@android:color/black"
            android:id="@+id/nombre_emprendimiento"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="30dp" android:textSize="14sp" android:fontFamily="@font/roboto_medium"
            android:layout_marginStart="30dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/sitio_web_emprendimiento" android:inputType=""/>
    <EditText
            android:layout_width="299.11dp"
            android:hint="Sitio Web"
            android:layout_height="wrap_content" android:textColor="@android:color/black"
            android:id="@+id/sitio_web_emprendimiento"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/nombre_emprendimiento"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_medium"
            app:layout_constraintStart_toStartOf="@+id/nombre_emprendimiento"
            android:textColorLink="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="@+id/nombre_emprendimiento"/>
    <EditText
            android:layout_width="299.11dp"
            android:hint="Correo"
            android:layout_height="44dp" android:textColor="@android:color/black"
            android:id="@+id/correo_emprendedor"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_medium"
            app:layout_constraintStart_toStartOf="@+id/nombre_emprendimiento"
            android:textColorLink="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="@+id/nombre_emprendimiento" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/sitio_web_emprendimiento"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/agregar_imagen"/>
    <Button
            android:text="Agregar Imagen"
            android:layout_width="0dp"
            android:layout_height="178dp"
            android:id="@+id/agregar_imagen" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#F1F9FF"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/correo_emprendedor" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayout"/>
    <Button
            android:text="OK"
            android:layout_width="0dp"
            android:layout_height="48dp" android:id="@+id/ok_crear_emprendimiento"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.919" android:backgroundTint="@color/color_ok"
            android:textColor="@android:color/white"/>
    <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp"
            app:layout_constraintTop_toBottomOf="@+id/agregar_imagen"
            android:layout_marginTop="8dp"
            android:id="@+id/textInputLayout" android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/ok_crear_emprendimiento">


        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="DescripciÃ³n" android:id="@+id/texto_detalle"/>
    </android.support.design.widget.TextInputLayout>

</android.support.constraint.ConstraintLayout>