<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Button
        android:text="@string/siguiente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_next2"
        android:background="@drawable/boton_redondo"
        android:textColor="@android:color/white"
        android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:text="Paso 2/3"
        android:layout_width="152dp"
        android:layout_height="46dp"
        android:id="@+id/paso3" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
        android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent" android:textSize="36sp"
        android:textAlignment="center" android:fontFamily="sans-serif"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="26dp"
        android:text="Genial ahora agrega una imagen"
        android:textAlignment="center"
        android:textSize="19sp"
        app:layout_constraintBottom_toTopOf="@+id/agregar_imagen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paso3"
        app:layout_constraintVertical_chainStyle="spread_inside" />
    <Button
        android:text="Agregar Imagen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/agregar_imagen" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="26dp" app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#F1F9FF"
        android:drawableBottom="@drawable/ic_camera_enhance_black_24dp"
        android:layout_marginBottom="71dp" app:layout_constraintBottom_toTopOf="@+id/button_next2"
        app:layout_constraintHorizontal_bias="1.0"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp" app:srcCompat="@drawable/ic_wallpaper_black_24dp"
        android:id="@+id/imagen_de_boton"
        app:layout_constraintTop_toTopOf="@+id/agregar_imagen"
        app:layout_constraintStart_toStartOf="@+id/agregar_imagen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/agregar_imagen" android:visibility="invisible"/>
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/boton_de_repuesto" app:layout_constraintEnd_toEndOf="@+id/imagen_de_boton"
        app:layout_constraintTop_toTopOf="@+id/imagen_de_boton" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/imagen_de_boton"
        android:background="@android:color/transparent" android:visibility="invisible"/>

</android.support.constraint.ConstraintLayout>