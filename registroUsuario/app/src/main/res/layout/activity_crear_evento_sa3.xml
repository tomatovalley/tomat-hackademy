<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearEventoSA3">

    <TextView
        android:text="Paso 3/3"
        android:layout_width="152dp"
        android:layout_height="46dp"
        android:id="@+id/paso3" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
        android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent" android:textSize="36sp"
        android:textAlignment="center" android:fontFamily="sans-serif"/>
    <EditText
        android:layout_width="299.11dp"
        android:hint="Organizador"

        android:layout_height="wrap_content" android:textColor="@android:color/black"
        android:id="@+id/registrar_organizador"
        android:textSize="14sp" android:fontFamily="/roboto_medium"
        android:drawableStart="@drawable/ic_person_black_24dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/paso3"
        />
    <Button
        android:text="OK"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/salir" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:text="Capacidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp" android:textAlignment="center" android:textSize="20sp"
        android:layout_marginTop="52dp" app:layout_constraintTop_toBottomOf="@+id/registrar_organizador"/>
    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_expand_less_black_24dp"
        android:id="@+id/capacidad_mayor"
        android:layout_marginTop="56dp" app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintStart_toEndOf="@+id/capacidad_asistentes" android:layout_marginStart="20dp"/>
    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_expand_more_black_24dp"
        android:id="@+id/capacidad_menor"
        android:layout_marginTop="56dp" app:layout_constraintTop_toBottomOf="@+id/textView5"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toStartOf="@+id/capacidad_asistentes"/>
    <EditText
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:inputType="number"
        android:background="@drawable/caja_vacia"
        android:ems="10"
        android:id="@+id/capacidad_asistentes"
        android:text="500" android:textSize="14sp"
        android:textAlignment="center" android:textColor="#001C0B"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        android:layout_marginEnd="156dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="156dp"
        app:layout_constraintStart_toStartOf="parent"/>

</android.support.constraint.ConstraintLayout>